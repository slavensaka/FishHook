<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsz_back"
    android:orientation="vertical" >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:orientation="vertical" >

    <Button
        android:id="@+id/mapa"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/buttonshape"
        android:onClick="GoogleMapa"
        android:shadowColor="#A87B37"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Google Maps"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/riba"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/buttonshape"
        android:onClick="RibaActivity"
        android:shadowColor="#A87B37"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Dodaj Ribu"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/izgubljeno"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/buttonshape"
        android:onClick="IzgubljenoActivity"
        android:shadowColor="#A87B37"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Izgubljeno"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/oprema"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:onClick="OpremaActivity"
        android:shadowColor="#A87B37"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Oprema"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/weather"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:onClick="WeatherActivity"
        android:shadowColor="#A87B37"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Weather"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/camera"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/mapa"
        android:layout_below="@+id/mapa"
        android:layout_marginTop="19dp"
        android:background="@drawable/buttonshape"
        android:onClick="CameraActivity"
        android:shadowColor="#A87B37"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Camera"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</LinearLayout>

</RelativeLayout>