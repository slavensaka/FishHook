<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsz_back"
    tools:context=".MainActivity" >

    <com.fish.weather.gplaces.CustomAutoComplete
        android:id="@+id/gplaces"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="@string/gplaces" >

        <requestFocus />
    </com.fish.weather.gplaces.CustomAutoComplete>

    <Button
        android:id="@+id/izracunaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gplaces"
        android:layout_centerHorizontal="true"
        
        android:shadowColor="#A87B37"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
     
        android:layout_marginTop="154dp"
        android:background="@drawable/buttonshape"
        android:onClick="UnosLokacije"
        android:text="Dohvati Prognozu"
        />

</RelativeLayout>