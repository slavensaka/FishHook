<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsz_back"
    android:orientation="vertical" >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/dodaj_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonshape"
        android:onClick="DodajMarker"
        android:shadowColor="#A87B37"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Dodaj Marker"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sve_lokacije"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dodaj_marker"
        android:layout_below="@+id/dodaj_marker"
        android:layout_marginTop="24dp"
        android:background="@drawable/buttonshape"
        android:onClick="SveLokacije"
        android:shadowColor="#A87B37"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Sve Lokacije"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</LinearLayout>
</RelativeLayout>